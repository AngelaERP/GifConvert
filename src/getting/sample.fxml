<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.NotificationPane?>

<NotificationPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8"
                  xmlns:fx="http://javafx.com/fxml/1"
                  fx:controller="getting.Controller" fx:id="notificationPane" showFromTop="false">
    <content>

        <BorderPane>

            <top>
                <MenuBar BorderPane.alignment="CENTER">
                    <menus>
                        <Menu text="文件">
                            <items>
                                <MenuItem onAction="#onChooseVideo" text="打开"/>
                            </items>
                        </Menu>
                        <Menu text="帮助">
                            <items>
                                <MenuItem onAction="#onAbout" text="关于"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </top>

            <right>
                <BorderPane BorderPane.alignment="CENTER">
                    <center>
                        <Pane BorderPane.alignment="CENTER">
                            <children>
                                <GridPane>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="帧率："/>
                                        <ComboBox fx:id="gifFrameRate" onAction="#onChooseFrame" prefWidth="150.0"
                                                  GridPane.columnIndex="1"/>

                                        <Label text="缩放：" GridPane.rowIndex="1"/>
                                        <ComboBox fx:id="gifScale" onAction="#onChooseScale" prefWidth="150.0"
                                                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                        <Label text="时长(s)：" GridPane.rowIndex="2"/>
                                        <ComboBox fx:id="gifTime" onAction="#onChooseTime" prefWidth="150.0"
                                                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                    </children>
                                </GridPane>
                            </children>
                            <BorderPane.margin>
                                <Insets top="10.0" right="10.0" left="10.0" bottom="10"/>
                            </BorderPane.margin>
                        </Pane>
                    </center>
                </BorderPane>
            </right>

            <center>
                <BorderPane BorderPane.alignment="CENTER">
                    <center>
                        <ImageView fx:id="gifPreview" fitHeight="500.0" fitWidth="500.0" pickOnBounds="true"
                                   preserveRatio="true" BorderPane.alignment="CENTER">
                            <image>
                                <Image backgroundLoading="true" url="@../res/loading5.gif"/>
                            </image>
                        </ImageView>
                    </center>
                </BorderPane>
            </center>

        </BorderPane>

    </content>
</NotificationPane>